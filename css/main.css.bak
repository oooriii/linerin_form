/* botons amb span dins x centrar textos */
.btn{
  padding-left: 0;
  padding-right: 0;
}

.text-danger{
	color: red;
}
img.aux-sizes{
	max-width: 200px;
}
.lines-articles input{
	max-width: 50px;
	padding: 0px;
}
.lines-articles td.grade{
	min-width: 60px;
}
.lines-articles td.type{
	min-width: 160px;
}
.lines-articles td.number{
	text-align: right;
}
input[type="number"]{
	text-align: right;
}
.popup{
	position: fixed;
	display: block;
	width: 300px;
	z-index: 2000;
	text-align: center;
	left: calc(50% - 150px);
	right: calc(50% - 150px);
	top: 300px;
	background-color: white;
	padding: 10px;
	border: 5px solid black;
}
.fade-enter-active, .fade-leave-active {
  transition: opacity .5s
}
.fade-enter, .fade-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0
}

